---
/**
 * Here we represent the components comments list, doesnt show if a component doesnt have comments
 */
import CommentCard from "../partials/cards/CommentCard.astro";

interface Props {
  comments;
}
const { comments } = Astro.props;
---

<section class="container">
  <div class="space-y-3">
    {comments.map((comment) => <CommentCard comment={comment} />)}
  </div>
</section>
