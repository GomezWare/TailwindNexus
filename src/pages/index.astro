---
/**
 * This page is the home of the application, it is thought as a landing page for when the user enters the domain.
 */

import Layout from "../layouts/Layout.astro";

import HomeTopHero from "../components/home/HomeTopHero.astro";
import HomeCards from "../components/home/HomeCards.astro";
import HomeSliderLatest from "../components/home/HomeSliderLatest.astro";
import HomeSliderTrending from "src/components/home/HomeSliderTrending.astro";
import HomeSliderTopDevelopers from "src/components/home/HomeSliderTopDevelopers.astro";

// Check if the site is in manteniance and redirect
if (import.meta.env.SERVER_MAINTENANCE == "true") {
  return Astro.redirect("/404");
}
---

<Layout title="Tailwind Nexus" footer={true}>
  <HomeTopHero />
  <HomeCards />
  <HomeSliderTopDevelopers />
  <HomeSliderLatest />
  <HomeSliderTrending />
</Layout>
