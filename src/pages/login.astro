---
/**
 * This page is for login and create a sesion via login buttons
 */
import Layout from "src/layouts/Layout.astro";

import AuthLoginForm from "src/components/auth/AuthLoginForm.astro";

import { getSession } from "auth-astro/server";

const session = await getSession(Astro.request);

if (session) {
  return Astro.redirect("/users/myaccount");
}
---

<Layout title="Login" footer={true}>
  <AuthLoginForm />
</Layout>
