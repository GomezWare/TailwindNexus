---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="../css/main.css" />
    <title>{title}</title>
  </head>
  <body class="bg-slate-800">
    <header>
      <section
        class="h-20 bg-slate-600 bg-opacity-50 border-b border-b-gray-700 backdrop-blur fixed top-0 w-full flex justify-between px-8 items-center text-gray-50 gap-5"
      >
        <div>
          <a href="/"
            ><img
              class="h-8 sm:h-16"
              src="logos/TailwindFull.png"
              alt="Tailwind Nexus Logo"
            /></a
          >
        </div>
        <search class="w-[25%] rounded-xl">
          <label for="componentSearch" class="sr-only">
            Search bar for components
          </label>
          <div class="relative font-light">
            <input
              type="search"
              id="componentSearch"
              class="w-full h-8 pl-2 rounded bg-slate-600 border-2-slate-500"
              placeholder="Search..."
            />
          </div>
        </search>
        <nav class="flex justify-center gap-5">
          <a class="flex items-center gap-1" href="/my">
            <span class="hidden sm:contents">Profile</span>
            <img
              src="icons/user.svg"
              class="w-7 rounded-full"
              alt="profile photo icon"
            />
          </a>
          <button class="flex items-center gap-1">
            <span class="hidden sm:contents">Menu</span>
            <img
              src="icons/menu.svg"
              class="w-7 rounded-full"
              alt="menu icon"
            />
          </button>
        </nav>
      </section>
    </header>
  </body>
  <main class="text-custom-text-primary">
    <slot />
  </main>
</html>
