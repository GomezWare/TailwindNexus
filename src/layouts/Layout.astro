---
import MenuResponsive from "../components/partials/menu/MenuResponsive.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/css/main.css" />
    <title>{title}</title>
  </head>
  <body class="bg-slate-800 scroll-smooth">
    <header>
      <section
        class="h-16 sm:h-20 bg-slate-600 bg-opacity-50 border-0 sm:border-b-2 border-b-gray-600 backdrop-blur fixed top-0 w-full flex justify-between px-8 items-center text-gray-50 gap-5 z-40"
      >
        <div>
          <a href="/"
            ><img
              class="h-8 sm:h-16"
              src="/logos/TailwindFull.png"
              alt="Tailwind Nexus Logo"
            /></a
          >
        </div>
        <search class="w-[25%] rounded-xl hidden sm:block">
          <label for="componentSearch" class="sr-only">
            Search bar for components
          </label>
          <div class="relative font-light">
            <input
              type="search"
              id="componentSearch"
              class="w-full h-8 pl-2 rounded bg-slate-600 border-2-slate-500 hover:bg-slate-500 transition-colors"
              placeholder="Search..."
            />
            <img
              class="absolute w-6 bottom-1/2 translate-y-1/2 right-2 pointer-events-none"
              src="/icons/search.svg"
              alt="Search magnifier icon"
            />
          </div>
        </search>

        <nav class="flex justify-center gap-5">
          <a
            class="flex items-center gap-1 p-1 hover:bg-slate-600 rounded transition-colors relative"
            href="/myAccount"
          >
            <span class="hidden sm:contents">Profile</span>
            <img
              src="/icons/user.svg"
              class="w-7 rounded-full pointer-events-none"
              alt="profile photo icon"
            />
          </a>
          <button
            class="menuOpen flex items-center gap-1 p-1 hover:bg-slate-600 rounded transition-colors"
          >
            <span class="hidden sm:contents">Menu</span>
            <img
              src="icons/menu.svg"
              class="w-7 rounded-full pointer-events-none"
              alt="menu icon"
            />
          </button>
        </nav>
      </section>
      <section
        class="h-12 sm:h-20 bg-slate-600 bg-opacity-50 border-b border-b-gray-600 backdrop-blur fixed top-16 w-full sm:hidden flex justify-center px-8 items-center text-gray-50 gap-5 !z-30"
      >
        <search class="w-[50%] rounded-xl sm:hidden">
          <label for="componentSearchMobile" class="sr-only">
            Search bar for components
          </label>
          <div class="relative font-light">
            <input
              type="search"
              id="componentSearchMobile"
              class="w-full h-8 pl-2 rounded bg-slate-600 border-2-slate-500 hover:bg-slate-500 transition-colors"
              placeholder="Search..."
            />
            <img
              class="absolute w-6 bottom-1/2 translate-y-1/2 right-2 pointer-events-none"
              src="icons/search.svg"
              alt="Search magnifier icon"
            />
          </div>
        </search>
      </section>
      <MenuResponsive />
    </header>
    <main class="mt-36 sm:mt-28 text-gray-50 space-y-4">
      <slot />
    </main>

    <footer class="flex flex-col justify-center items-center pb-5 mt-12">
      <div
        class="border-t-2 border-slate-600 py-2 px-6 flex justify-between items-center w-full"
      >
        <div>
          <img
            class="w-48 sm:w-64 pointer-events-none"
            src="/logos/TailwindFull.png"
            alt="Tailwind Nexus Logo"
          />
        </div>
        <div
          class="flex-col justify-center items-center space-y-3 flex-1 w-full hidden lg:flex"
        >
          <p class="font-code text-gray-50 text-xs mx-8 sm:mx-24 text-center">
            Tailwind Nexus is an open source end-of-degree project so you are
            free to review the source code and contribute to the github
            repository.
          </p>
          <p class="font-code text-gray-50 text-sm">
            David Gómez Vicente (<a
              href="https://github.com/GomezWare"
              target="_blank"
              class="custom-link">GomezWare</a
            >) - 2024
          </p>
        </div>
        <div>
          <ul class="flex gap-4">
            <li>
              <a
                class="p-3 bg-slate-600 rounded-full inline-block hover:bg-slate-400 transition-colors"
                href="https://github.com/GomezWare/TailwindNexus"
                target="_blank"
                ><img class="w-6" src="/icons/github.svg" alt=" git logo" /></a
              >
            </li>
            <li>
              <a
                class="p-3 bg-slate-600 rounded-full inline-block hover:bg-slate-400 transition-colors"
                href="mailto:tailwindnexus@gmail.com?subject=Tailwind Nexus Feedback"
                ><img class="w-6" src="/icons/mail.svg" alt=" email icon" /></a
              >
            </li>
            <li>
              <a
                class="p-3 bg-slate-600 rounded-full inline-block hover:bg-slate-400 transition-colors"
                href="https://stackoverflow.com/users/24634865/tailwind-nexus"
                target="_blank"
                ><img
                  class="w-6"
                  src="/icons/stackOverflow.svg"
                  alt=" Stack overflow logo"
                /></a
              >
            </li>
          </ul>
        </div>
      </div>
      <div class="lg:hidden">
        <div
          class="flex flex-col justify-center items-center space-y-3 flex-1 w-full"
        >
          <p class="font-code text-gray-50 text-xs mx-8 sm:mx-24 text-center">
            Tailwind Nexus is an open source end-of-degree project so you are
            free to review the source code and contribute to the github
            repository.
          </p>
          <p class="font-code text-gray-50 text-sm">
            David Gómez Vicente (<a
              href="https://github.com/GomezWare"
              target="_blank"
              class="custom-link">GomezWare</a
            >) - 2024
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
